<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                   android:layout_height="wrap_content" android:id="@+id/cardView"
                                   app:cardBackgroundColor="#ffffff" app:cardCornerRadius="8dp"
                                   app:contentPadding="0dp" app:cardElevation="10dp"
                                   android:layout_margin="8dp" android:padding="0dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
    >
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@mipmap/ic_launcher"
                android:scaleType="centerCrop"

                android:id="@+id/img" android:adjustViewBounds="true" android:layout_margin="0dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/title"
                app:autoSizeTextType="uniform" android:gravity="center|fill_vertical"
                android:textSize="28sp" android:textAlignment="center"
                android:textStyle="bold"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>